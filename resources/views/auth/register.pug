
include ./../partials/header.pug

style.
	body {
	background: url(./images/bg/login_bg.jpg);
	}
	.jumbotron {
	text-align: center;
	width: 30rem;
	border-radius: 0.5rem;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	position: relative;
	margin: 2rem auto;
	background-color: #fff;
	padding: 1rem;
	}
	.container .ion-logo-nodejs {
	font-size: 10rem;
	margin-top: 3rem;
	color: #f96145;
	}
	input {
	width: 100%;
	margin-bottom: 1.4rem;
	padding: 1rem;
	background-color: #ecf2f4;
	border-radius: 0.2rem;
	border: none;
	}
	h2 {
	margin-bottom: 2rem;
	font-weight: bold;
	color: #ababab;
	}
	.btn {
	border-radius: 0.2rem;
	}
	.btn .icon {
	font-size: 3rem;
	color: #fff;
	}
	.full-width {
	background-color: #8eb5e2;
	width: 100%;
	-webkit-border-top-right-radius: 0;
	-webkit-border-bottom-right-radius: 0;
	-moz-border-radius-topright: 0;
	-moz-border-radius-bottomright: 0;
	border-top-right-radius: 0;
	border-bottom-right-radius: 0;
	padding: 0;
	}
	.box {
	/* position: absolute; */
	bottom: 0;
	left: 0;
	margin-bottom: 3rem;
	margin-left: 3rem;
	margin-right: 3rem;
	}
.jumbotron
	.container
		span.glyphicon.glyphicon-list-alt
		i.icon.ion-logo-nodejs
		h2 {{meta.page_title}}
		.box
			form.form-action(action='/register', method='POST')
				input#email(name='email', type='email', placeholder='email')
				input#password(name='password', type='password', placeholder='password')
				button.btn.btn-default.full-width
					span.glyphicon.glyphicon-ok
				button#login.btn.btn-default.full-width(type='submit')
					i.icon.ion-md-checkmark
// Footer Partial
include /partials/footer.pug
